@model IEnumerable<Aplicacao_Kolping.Models.Alunos>

@{
    ViewData["Title"] = "Alunos";
}

<h2>Alunos</h2>

<p>
    <a asp-action="NovoAluno" class="btn btn-default">Novo Aluno</a>
</p>

<form asp-controller="Alunos" asp-action="Index" method="get">
    <p>
        <input type="text" class="col-md-4" name="Busca" />
        <input type="submit" value="Pesquisar" />
    </p>
</form>



<table class="table">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiadePagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiadePagamento)
                </td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@item.ID">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
